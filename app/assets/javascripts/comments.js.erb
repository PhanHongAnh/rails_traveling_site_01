$(document).on('turbolinks:load', function() {
  submitNewComment();
});

function submitNewComment(){
  $('textarea#comment_content').keydown(function(event) {
    if (event.keyCode == 13) {
        $('[data-send="comment"]').click();
        $('[data-textarea="comment"]').val(" ")
        return false;
     }
  });
}
